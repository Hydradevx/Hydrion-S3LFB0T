<div class="control-centre">
    <h1 class="title">Control Centre</h1>

    <div class="section">
        <h2>Bot Information</h2>
        <p><b>Username:</b> <span id="bot-username">Loading...</span></p>
        <p><b>ID:</b> <span id="bot-id">Loading...</span></p>
        <p><b>Status:</b> <span id="bot-status">Loading...</span></p>
    </div>

    <div class="section">
        <h2>Set Activity</h2>
        <input type="text" id="activity-input" placeholder="Enter activity">
        <select id="activity-type">
            <option value="PLAYING">Playing</option>
            <option value="LISTENING">Listening</option>
            <option value="WATCHING">Watching</option>
        </select>
        <button onclick="setActivity()">Set Activity</button>
    </div>

    <div class="section">
        <h2>Power Off</h2>
        <button class="power-off-btn" onclick="shutdownBot()">Power Off</button>
    </div>
</div>

